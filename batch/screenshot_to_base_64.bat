@echo off
powershell -NonInteractive -command "& {Add-Type -AssemblyName System.Windows.Forms;Add-Type -AssemblyName System.Drawing;$screen = [System.Windows.Forms.Screen]::PrimaryScreen;$bounds = $screen.Bounds;$bitmap = New-Object System.Drawing.Bitmap $bounds.Width, $bounds.Height;$graphics = [System.Drawing.Graphics]::FromImage($bitmap);$graphics.CopyFromScreen($bounds.Location, [System.Drawing.Point]::Empty, $bounds.Size);$outputStream = New-Object System.IO.MemoryStream;$bitmap.Save($outputStream, [System.Drawing.Imaging.ImageFormat]::Png);$base64Image = [System.Convert]::ToBase64String($outputStream.ToArray());echo $base64Image}"
